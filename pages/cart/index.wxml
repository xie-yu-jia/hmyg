<view class="address_view">
    <!-- 没有收货地址就显示按钮 -->
    <button wx:if="{{!address.userName}}" bindtap="handleAddress">+ 获取收货地址</button>
    <!-- 有收货地址就显示地址 -->
    <view wx:else>{{address.userName}} {{address.provinceName}}{{address.cityName}}{{address.countyName}}{{address.detailInfo}}</view>
</view>
